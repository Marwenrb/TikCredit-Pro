rules_version='2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Submissions collection - accessible by Admin SDK (server-side bypasses rules)
    // Client-side access requires authentication
    match /submissions/{submissionId} {
      // Deny all client-side access for security
      // Admin SDK (server-side) bypasses these rules automatically
      allow read, write: if false;
    }
    
    // Allow Admin SDK to access everything (server-side bypasses rules)
    // These rules only apply to client-side SDK
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
